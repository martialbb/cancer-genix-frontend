---
import '../styles/global.css';
import { AuthProvider } from '../context/AuthContext.tsx'; // Import AuthProvider
import Header from '../components/Header.tsx'; // Import a new Header component

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en" class="h-full bg-gray-100">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
			<title>{title} | Genascope</title> { /* Update title format */ }
	</head>
	<body class="h-full">
		<AuthProvider> { /* Wrap everything in AuthProvider */ }
			<Header client:load /> { /* Add Header, needs client-side interactivity */ }
			<slot /> { /* Page content goes here */ }
		</AuthProvider>
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		padding: 0; /* Ensure no default padding */
		width: 100%;
		height: 100%;
		font-family: system-ui, sans-serif; /* Add a default font */
	}
	/* Add other global styles if needed */
</style>
